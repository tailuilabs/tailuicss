{
  "name": "tailuicss",
  "version": "2.2.0",
  "description": "A semantic CSS-first layer on top of Tailwind CSS. Write class=\"ui-button ui-primary\" instead of 40 utility classes.",
  "type": "module",
  "main": "./dist/plugin/index.js",
  "module": "./dist/plugin/index.mjs",
  "types": "./dist/plugin/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/plugin/index.d.ts",
      "import": "./dist/plugin/index.js",
      "require": "./dist/plugin/index.cjs"
    },
    "./postcss": {
      "types": "./dist/postcss/index.d.ts",
      "import": "./dist/postcss/index.js",
      "require": "./dist/postcss/index.cjs"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js",
      "require": "./dist/templates/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "bin": {
    "tailui": "./dist/cli/index.js"
  },
  "files": [
    "dist/",
    "ui/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npx tailwindcss -i ./demo/src/input.css -o ./demo/dist/output.css --postcss --watch",
    "build": "tsup",
    "dev:build": "tsup src/plugin/index.ts --format esm,cjs --dts --watch",
    "prepublishOnly": "npm run typecheck && npm run build",
    "build:demo": "npx tailwindcss -i ./demo/src/input.css -o ./demo/dist/output.css --postcss",
    "demo": "npx tailwindcss -i ./demo/src/input.css -o ./demo/dist/output.css --postcss && open demo/index.html",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "css",
    "design-system",
    "ui",
    "semantic",
    "components",
    "postcss",
    "plugin",
    "utility-first",
    "css-framework",
    "tailwind",
    "tailwindcss",
    "csstailwind",
    "reacttailwind",
    "nextjstailwind",
    "tailwind plugin",
    "tailwind vue",
    "tailwind astro",
    "tailwind svelte",
    "tailwind nuxt",
    "tailwind laravel",
    "tailwind rails",
    "front-end",
    "theme",
    "nextjs",
    "vue",
    "component",
    "framework",
    "library",
    "astro",
    "svelte",
    "nuxt",
    "laravel",
    "rails"
  ],
  "author": "TailUI CSS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tailuilabs/tailuicss.git"
  },
  "homepage": "https://tailuicss.com",
  "bugs": {
    "url": "https://github.com/tailuilabs/tailuicss/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "**/*.css",
    "./dist/postcss/*.js",
    "./dist/plugin/*.js"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tailuilabs"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
